header.header
	div(class=`${containerHeader}`)
		.header__row
			.header__row-left
				include social.pug
			.header__row-right
				.hamburgermenu.js__hamburgermenu
					a.hamburgermenu__item
			
		div(class=`${headerMainBg}`)
			.header__img
				+image('welcome/avatar.jpg', 'Аватар', 'header__ava')
			div(class=`${headerContentClass}`)
				h2(class=`${headerTitleClass}`) #{headerTitle}
				div(class=`${headerTextClass}`) #{headerText}
		block arrow