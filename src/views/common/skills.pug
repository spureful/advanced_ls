script(type="text/x-template")#skills-section
	ul.skills-list(ref="skills-block" )
		li.skills-list__item(v-for="skill in skillscontent") 
			skillsRow(
			:skill="skill"
			)
		
script(type="text/x-template")#skills-row
	.skills-row
		.skills-row__title {{skill.titleGruop}}
		ul.skills-row__list
			li.skills-row__item(v-for="(skillPercents, titleSkills) in skill.skillsCont")
				skill(
				:titleSkills="titleSkills"
				:skillPercents="skillPercents"
				)
			
script(type="text/x-template" )#skills-row-item
	figure.skill(data-percents="70" ref="skill-item")
		svg(viewBox="0 0 100 100" preserveAspectRatio="none").skill__figure
			circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
			circle(cx="50" cy="50" r="40" ref="color-circle").skill__circle.skill__circle_above {{ skillPercents }}
		.skill__title {{ titleSkills }}
