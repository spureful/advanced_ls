extends ../main.layout.pug

block variables
  - var title = 'blog'
  - var headerTitle = 'блог'
  - var headerText = 'Статьи, которые я написала'
  - var headerContentClass = 'header__content_blog'
  - var headerTitleClass = 'header__title_blog'
  - var headerTextClass = 'header__text_blog'
  - var containerHeader = 'container__header_blog'
  - var a = false

block scripts
  script(src='blog.bundle.js')

  
block content
  .figure
    svg(viewBox="0 0 100 100" preserveAspectRatio="none").figure__polyline
      polyline(points='0,700 0,0 50,90 100,0 100,700 0,700')
  .maincontent_blog
    
    aside.titlesarticles
      +articleTitles(['Самое важное в SASS','Приёмы в вёрстке, без которых не обходится ни один сайт','Самый необходимый набор Gulp плагинов', 'Почему я выбрала Jade'])
    include ../common/articles.pug