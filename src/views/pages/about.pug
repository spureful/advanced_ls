extends ../main.layout.pug

block variables
  - var title = 'Обо мне'
  - var headerTitle = 'Анна Сысоева'
  - var headerText = 'Личный сайт веб разработчика'
  - var headerContentClass = 'header__content'
  - var headerTitleClass = 'header__title'
  - var headerTextClass = 'header__text'
  - var containerHeader = 'container__header'
  - var headerMainBg = 'header__main_portfoliobg'


block scripts
  script(src='about.bundle.js')

block arrow
  .header__arrow-block
    include ../common/headerarrow.pug

block content
  section.aboutme
    .aboutme__bg
        svg(viewBox="0 0 100 100" preserveAspectRatio="none").aboutme__bg-left
          polyline(points='0,40 0,0 100,40 ')
        svg(viewBox="0 0 100 100" preserveAspectRatio="none").aboutme__bg-right
          polyline(points='0,40 100,0 100,40 ')
    .aboutme__column-left
      
     
      .aboutme__title
        h2.aboutme__title-txt Обо мне
      .aboutme__person
        .aboutme__avatar
          +image('about/avatar.jpg', 'Фото', 'aboutme__avatar-img')
        .aboutme__content
          .aboutme__content-title
            h3.aboutme__content-titletext Кто я
          .aboutme__content-text
            p Я веб разработчик из Санкт-Петербурга. Мне 32 года. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
            p Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите,как тут всё классно и красиво!
		  
    .aboutme__column-right
      .aboutme__skills
        h3.aboutme__skills-title Чем я могу быть вам полезна
      .aboutme__skills-content
        .aboutme__skills-text Больше всего меня привлекет Frontend разработка, но я также знакома и могу решать несложные задачи на Backend. Но давайте по порядку.
      .aboutme__skills-block
        include ../common/skills.pug

  section.map
    .map__container
      .contacts
        .contacts__title
          h2.contacts__titletext Контакты
        .contacts__content
          ul.contacts__list
            - var contItems = [['skype', 'skype_kdn'], ['envelope', 'astahov@gmail.com'], ['phone', '+7 931 200 93 24'], ['map_marker', 'г.Новосибирск, ул. Инская, д. 5']]
              each contItem in contItems
                li.contacts__item
                  .contacts__icon
                    +icon (`${contItem[0]}`, 'contacts__icon-svg')
                  a.contacts__contact
                    .contacts__contact-text #{contItem[1]}
    include ../common/footer.pug
